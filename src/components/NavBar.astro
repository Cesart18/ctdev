---
import { Image } from "astro:assets";
import NavBarLinks from "./NavBarLinks.astro";
import { LINKS } from "../consts";
import { Icon } from "astro-icon/components";

---

<nav>
    <div class="nav">
        <a href="/" aria-label="logo" ><Icon name={'logo'} class={'logo'} width={60} height={60}/></a>
    <div class="navigation">
        {
            LINKS.map( l => (
            <NavBarLinks href={l.HREF}>{l.TEXT}</NavBarLinks>
            ))
        }

    </div>
    
    <div class="social">
        
        <a aria-label="github" href="https://www.linkedin.com/in/cesar-tovar-584111164" target="_blank"><Icon name={'linkedin'} width={30} height={30}/></a>
            <a aria-label="github" href="https://github.com/Cesart18" target="_blank"><Icon name={'github'} width={30} height={30} /></a>
    </div>
    
    
    <Image src={'/icons/menu.svg'} alt={'Menu'} width={30} height={30} loading={'eager'} class={'menu'}/>
    
    </div>
    <div class="navigation-m">
        {
            LINKS.map( l => (
            <NavBarLinks href={l.HREF}>{l.TEXT}</NavBarLinks>
            ))
        }
    </div>
</nav>

<style>
    nav{
        display: flex;
        flex-direction: column;
        width: 100%;
        box-sizing: border-box;
        padding: 1.4rem 2rem;
        background-color: transparent;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        margin: auto;
        z-index: 2000;
        transition: all .5s ease-in-out;
        border-radius: 30px;
    }
    .menu-show{
        background-color: var(--secondary);
    }
    .nav{
        display: flex;
        width: 100%;
        justify-content: space-between;
        align-items: center;
    }
    a{
        display: flex;
        align-items: center;
    }
    .navigation{
        display: none;
    }
    .navigation-m{

        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 0;
        overflow: hidden;
        transition: all .5s ease-in-out;
    }
    .show{
        height: 60px;
    }
    .social{
        display: none;
    }

    @media screen and (min-width: 768px) and (max-width: 1023px){
        .logo{
            width: 64px;
        }
    }

    @media (min-width: 1024px) {
        nav{
            max-width: 1023px;
            padding: 1.7rem 1.3rem;
        }
        .logo{
            width: 70px;
        }
        svg{
            width: 36px;
            height: 36px;
            transition: all .3s ease-in-out;
        }
        svg:hover{
            transform: scale(1.1);
            filter: opacity(.8);
        }
        .menu{
            display: none;
        }
        .social{
            display: flex;
            gap: 1rem;
            align-items: center;
        }
        .navigation{
            display: flex;
            gap: 1rem;
            align-items: center;
        }
        
    }
</style>
<script>

        document.addEventListener('astro:page-load', () => {
        const menu = document.querySelector('.menu');
        const nav = document.querySelector('nav');
    const navM = document.querySelector('.navigation-m');
    menu?.addEventListener('click', () => {
        navM?.classList.toggle('show');
        nav?.classList.toggle('menu-show')
    });
    
    document.addEventListener('scroll', () => {
        navM?.classList.remove('show');
        nav?.classList.remove('menu-show')
    });
})

</script>