---
import { Image } from "astro:assets";


---

<section>
    
        <div class="hero">
            <h1></h1>
            <div class="memoji">
                <Image src={'/images/programador.png'} alt={'memoji'} width={200} height={200} loading={'eager'} />
            </div>
        </div>
        <a href="#about" class="arrow">

        </a>
</section>

<style>
    section{
        width: 100%;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 110px 20px 10px 20px;
        border-radius: 30px;
        background: linear-gradient(
            to bottom right, var(--bg-color) ,var(--secondary), var(--primary)  
        );
        gap: 100px;
    }

    .hero{
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 50px;
    }

    h1{
        max-width: 230px;
        width: 100%;
        text-align: center;
        min-height: 100px;
        filter: drop-shadow(6px 8px 14px rgba(0, 0, 0, .5));

    }
    img{
        width: 100%;
        animation: show-in 1s ease-in-out ;
    }
    .memoji{
        width: 200px;
        min-height: 300px;
        height: 100%;
    }
    .arrow{
        min-height: 50px;
        animation: pulse 1s linear infinite;
    }
   

    
    @media (min-width: 768px) {
        section{
            padding: 180px 20px 10px 20px;
            gap: 60px;
        }
        .hero{
            flex-direction: row;
            gap: 80px;
        }
        .memoji{
            width: 250px;
            min-height: 420px;
        }
        h1{
            min-width: 400px;
            max-width: 400px;
        }
        .arrow:hover{
            filter: opacity(.8);
        }
    }

   

    @keyframes show-in {
        from{
            scale: .9;
            opacity: 0;
        }
        
        to{
            scale: 1;
            opacity: 1;
        }
        
    }
    @keyframes slide-in {
        from{
            opacity: 0;
        }
        
        to{
            opacity: 1;
        }
        
    }

    @keyframes pulse {
        0%{
            scale: 1;
        }
        50%{
            scale: 1.105;
        }
        100%{
            scale: 1;
        }
    }

    @keyframes arrow-up {
        0%{
            transform: translateY(-200px);
            opacity: 0;
        }
        100%{
            transform: translateY(0);
            opacity: 1;
        }
    } 
    
</style>

<script>
    import Typed from 'typed.js';
    const memoji = document.querySelector('.memoji');
    const arrow = document.querySelector('.arrow');
    const typed = new Typed('h1', {
  strings: ['<span style="color:var(--primary)" >Desarrollador<span> <span style="color:white">Movil y Web<span>',],
  typeSpeed: 80,
  autoInsertCss: true,
  showCursor: false
});

    const img = document.createElement('img');
    img.setAttribute('src', '/images/cesar.png' );
    img.alt = 'memoji cesar'
    img.width = 200;
    img.height = 200;
    img.loading = 'lazy';
    img.style.animation = 'slide-in 2s ease-in-out';
    img.style.width = '100%';
    img.style.cursor = 'pointer';
   
   const btn = document.createElement('button');
   btn.innerText = 'Contacta conmigo';
   btn.classList.add('btn-primary');

    const div = document.createElement('div');
    div.classList.add('contact');
    div.append(img,btn);




    typed.stop();
    setTimeout( () => typed.start() , 1000);

    setTimeout( () => {
        memoji!.innerHTML = '';
        memoji?.append(div);
        
        // // hover
        img?.addEventListener('mouseenter', () => {
            img.setAttribute('src', '/images/guino.png');

        });
        img?.addEventListener('mouseleave', () => {
            img.setAttribute('src', '/images/cesar.png');

        });
        btn?.addEventListener('mouseenter', () => {
            img.setAttribute('src', '/images/guino.png');

        });
        btn?.addEventListener('mouseleave', () => {
            img.setAttribute('src', '/images/cesar.png');

        });


    },4200 );

    div.addEventListener('click', () => {
        location.href = '/contacto/';
    })

    setTimeout(() => {
        arrow!.innerHTML = `<img src='/icons/arrow-down.svg' alt='arrow down' width='30px' height='30px' loading='eager' style="animation: arrow-up 1s ease-in-out" >`
    }, 4300)

</script>