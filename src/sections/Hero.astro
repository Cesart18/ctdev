---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";



---

<section>
  <div class="hero">
 
    <div class="text">
      <h1><strong>Desarrollador</strong> de Software</h1>
    </div>
    <div class="memoji">
      <div class="memo-frame">
        <Image
          src={"/images/cesar.webp"}
          alt={"memoji"}
          width={180}
          height={200}
          loading={"eager"}
          class={"memoji-img"}
        />
      </div>
      <button class="btn-primary">Contacta conmigo</button>
    </div>
  </div>
  <a href="#about" class="arrow" aria-label="conoce mas sobre mi"
    ><Icon name={"arrow-down"} width={30} height={30} />
  </a>
</section>

<style>
  section {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 110px 20px 10px 20px;
    border-radius: 30px;
    background: linear-gradient(
      to bottom right,
      var(--bg-color),
      var(--secondary),
      var(--primary)
    );
    gap: 100px;
  }
  strong {
    color: var(--primary);
  }

  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 50px;
  }

  h1 {
    max-width: 230px;
    width: 100%;
    filter: drop-shadow(6px 8px 14px rgba(0, 0, 0, 0.5));
    display: inline;
    animation: show-in 1.5s ease-in-out;
  }
  img {
    width: 100%;
    animation: show-in 1s ease-in-out;
    transition: all 1s ease-in-out;
  }
  .memo-frame {
    min-height: 230px;
  }
  .memoji {
    width: 180px;
    min-height: 305px;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 30px;
    cursor: pointer;
  }
  .arrow {
    min-height: 50px;
    animation: pulse 1s linear infinite;
    transition: all 1s ease-in-out;
    transform: translateY(-200px);
    opacity: 0;
  }
  .arrow.active {
    opacity: 1;
    transform: translateY(0);
  }
  .text {
    display: flex;
    justify-content: center;
    text-align: center;
    display: inline;
    min-height: 100px;
  }

  @media (min-width: 1024px) {
    section {
      padding: 130px 20px 10px 20px;
      gap: 60px;
    }
    .hero {
      flex-direction: row;
      gap: 80px;
    }
    .memoji {
      width: 260px;
      min-height: 520px;
    }
    .memo-frame {
      min-height: 330px;
    }
    h1 {
      min-width: 600px;
      max-width: 600px;
    }

    .arrow:hover {
      filter: opacity(0.8);
    }
    .text {
      display: flex;
      justify-content: center;
      text-align: center;
      display: inline;
      max-width: 500px;
      min-width: 500px;
    }
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const arrow = document.querySelector(".arrow");
    const memoji = document.querySelector(".memoji");

    const img: HTMLElement = document.querySelector(
      ".memoji-img"
    ) as HTMLElement;

    const btn = document.querySelector("button");

    // // hover
    if(memoji){

      memoji?.addEventListener("mouseenter", () => {
        img.setAttribute("src", "/images/guino.webp");
      });
      memoji?.addEventListener("mouseleave", () => {
        img.setAttribute("src", "/images/cesar.webp");
      });
    }
    if(btn){

      btn?.addEventListener("mouseenter", () => {
        img!.setAttribute("src", "/images/guino.webp");
      });
      btn?.addEventListener("mouseleave", () => {
        img!.setAttribute("src", "/images/cesar.webp");
      });
      btn?.addEventListener("click", () => {
        location.href = "/#contact/";
      });
    }

    if(arrow){

      setTimeout(() => {
        arrow!.classList.add("active");
      }, 400);
    }
  });
</script>
